{% include 'header.twig' %}
<h2>{{ ticket.title }}</h2>
<p>Created: {{ ticket.created }} by {{ users[ticket.creator] }}</p>
<p>Modified: {{ ticket.modified }}</p>
<p>{{ ticket.description }}</p>
<ul>
{% for comment in comments %}
    <li>
        <strong>{{ users[comment.creator] }}</strong>
        <span>{{ comment.created }}</span>
        <p>{{ comment.content }}</p>
    </li>
{% endfor %}
</ul>
{% include 'footer.twig' %}
